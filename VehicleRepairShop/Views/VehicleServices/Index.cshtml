@model IEnumerable<VehicleRepairShop.Models.VehicleService>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartList)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartList)
            </td>
            <td>
                <button class="btn btn-info" onclick='@(Url.Action("Edit", "Appointments", new { id = item.Id }))'>Edit</button>
                <button class="btn btn-info" onclick='@(Url.Action("Details", "Appointments", new { id = item.Id }))'>Details</button>
                <button class="btn btn-danger" onclick='@(Url.Action("Delete", "Appointments", new { id = item.Id }))'>Delete</button>
            </td>
        </tr>
}
    </tbody>
</table>
